<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".RecordActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:onClick="grabacion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grabar"
        android:id="@+id/button"
        android:onClick="grabacion"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Grabacion"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0 dB Fs"
        android:id="@+id/textLeftdB"
        android:layout_alignTop="@+id/textRightdB"
        android:layout_alignStart="@+id/leftLedView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0 dB Fs"
        android:id="@+id/textRightdB"
        android:layout_above="@+id/rightLedView"
        android:layout_alignStart="@+id/rightLedView"
        android:layout_marginBottom="34dp" />
    <com.example.sebastin.bina2.LedMeter
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:ledHeight="300dp"
        custom:ledWidth="40dp"
        custom:numLed="20"
        android:id="@+id/rightLedView"
        android:layout_above="@+id/editText"
        android:layout_toEndOf="@+id/button"
        android:layout_alignTop="@+id/leftLedView" />
    <com.example.sebastin.bina2.LedMeter
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:ledHeight="300dp"
        custom:ledWidth="40dp"
        custom:numLed="20"
        android:id="@+id/leftLedView"
        android:layout_below="@+id/button"
        android:layout_marginTop="99dp"
        android:layout_toStartOf="@+id/editText"
        android:layout_above="@+id/editText" />
</RelativeLayout>
