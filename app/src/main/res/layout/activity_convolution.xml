<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sebastin.bina2.ConvolutionActivity">

    <ImageButton
        android:onClick="convolutionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conv0"
        android:src="@drawable/ic_action_record"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:onClick="convolutionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:src="@drawable/ic_action_record"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:onClick="convolutionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conv90"
        android:src="@drawable/ic_action_record"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:onClick="convolutionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convm90"
        android:src="@drawable/ic_action_record"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:onClick="convolutionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conv180"
        android:src="@drawable/ic_action_record"
        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButton7" />

    <ImageButton
        android:onClick="convolutionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convm135"
        android:src="@drawable/ic_action_record"
        android:layout_above="@+id/conv180"
        android:layout_toEndOf="@+id/convm90" />

    <ImageButton
        android:onClick="convolutionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conv135"
        android:src="@drawable/ic_action_record"
        android:layout_above="@+id/conv180"
        android:layout_toStartOf="@+id/conv90" />

    <ImageButton
        android:onClick="convolutionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convm45"
        android:src="@drawable/ic_action_record"
        android:layout_below="@+id/conv0"
        android:layout_toEndOf="@+id/convm90" />

    <ImageButton
        android:onClick="convolutionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conv45"
        android:src="@drawable/ic_action_record"
        android:layout_alignTop="@+id/convm45"
        android:layout_toStartOf="@+id/conv90" />
    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
