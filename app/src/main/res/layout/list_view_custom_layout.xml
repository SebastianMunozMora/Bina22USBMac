<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp"

    android:background="@color/windowbackground_color">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item"
        android:text="Recording Title"
        android:textSize="20sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#000000"
        android:drawable="@drawable/my_selector"
        android:gravity="left"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recording Data"
        android:textColor="#000000"
        android:textSize="10sp"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toStartOf="@+id/view2" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/theme_color"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />
    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/theme_color"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view3" />
    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/theme_color"

        android:layout_above="@+id/view"
        android:layout_alignParentEnd="true"
        android:id="@+id/view2" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:src="@drawable/logo1"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/view3" />
</RelativeLayout>