<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp"

    android:background="#c0c8ff">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item"
        android:text="Recording Title"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#000000"
        android:drawable="@drawable/my_selector"
        android:gravity="center"
        android:layout_toEndOf="@+id/imageView"
        android:layout_above="@+id/textView2"
        android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recording Data"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/list_item" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e41616"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:src="@drawable/cs_10em_angle_gal"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>