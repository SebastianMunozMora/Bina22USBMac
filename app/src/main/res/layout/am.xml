<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <View
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#5e80ef"
        android:id="@+id/view4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AudiometrÃ­a"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/seekBar"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:rotation="20"
        android:progressBackgroundTint="#5e80ef" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/seekBar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView10" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:src="@drawable/ic_pause_black_24dp"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toStartOf="@+id/imageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60 dB SPL"
        android:id="@+id/textView7"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000 Hz"
        android:id="@+id/textView8"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#5e6bf4"
        android:layout_below="@+id/imageButton3"
        android:layout_alignStart="@+id/textView7" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_hearing_black_24dp"
        android:background="#5475f9"
        android:layout_below="@+id/view4"
        android:layout_toStartOf="@+id/textView4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:src="@drawable/ic_hearing_black_24dp"
        android:background="#f43d37"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Izquierdo"
        android:id="@+id/textView9"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/imageButton5"
        android:layout_toStartOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Derecho"
        android:id="@+id/textView10"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/imageButton6"
        android:layout_toEndOf="@+id/seekBar" />


</RelativeLayout>